</RollingFile>

<RollingFile name="category" fileName=".\\output\\category.log" filePattern=".\\output\category-%d{yyyy-MM-dd-HH-mm-ss-SSS}.log">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
<SizeBasedTriggeringPolicy size="50kb" />
</RollingFile>


<RollingFile name="loginpage" fileName=".\\output\\loginpage.log" filePattern=".\\output\loginpage-%d{yyyy-MM-dd-HH-mm-ss-SSS}.log">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
