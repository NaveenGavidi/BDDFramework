<RollingFile name="wishlist" fileName=".\\output\\wishlist.log" filePattern=".\\output\wishlist-%d{yyyy-MM-dd-HH-mm-ss-SSS}.log">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
<SizeBasedTriggeringPolicy size="50kb" />
</RollingFile> 

<Console name="Console" target="SYSTEM_OUT">
<PatternLayout pattern="%d{yyyy-MM-dd-HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
</Console>

</Appenders>


<Loggers>

<Logger name="stepDefinations.cartcheckoutDefination" level="trace" additivity="false">
<AppenderRef ref="cartcheckout"/>
</Logger>

<Logger name="stepDefinations.contactpageDefination" level="trace" additivity="false">
<AppenderRef ref="contactpage"/>
</Logger>

<Logger name="stepDefinations.HomepageDefination" level="trace" additivity="false">
