<SizeBasedTriggeringPolicy size="50kb" />
</RollingFile>



 <RollingFile name="signinpage" fileName=".\\output\\signinpage.log" filePattern=".\\output\signinpage-%d{yyyy-MM-dd-HH-mm-ss-SSS}.log">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
