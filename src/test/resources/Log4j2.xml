<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

<Appenders>
<RollingFile name="cartcheckout" fileName=".\\output\\cartcheckout.log" filePattern=".\\output\cartcheckout-%d{yyyy-MM-dd-HH-mm-ss-SSS}.log">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
<SizeBasedTriggeringPolicy size="50kb" />
</RollingFile>

<RollingFile name="contactpage" fileName=".\\output\\contactpage.log" filePattern=".\\output\contactpage-%d{yyyy-MM-dd-HH-mm-ss-SSS}.log">
