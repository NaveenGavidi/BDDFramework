</RollingFile>

<RollingFile name="newsletter" fileName=".\\output\\newsletter.log" filePattern=".\\output\newsletter-%d{yyyy-MM-dd-HH-mm-ss-SSS}.log">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
<SizeBasedTriggeringPolicy size="50kb" />
</RollingFile>

<RollingFile name="search" fileName=".\\output\\search.log" filePattern=".\\output\search-%d{yyyy-MM-dd-HH-mm-ss-SSS}.log">
